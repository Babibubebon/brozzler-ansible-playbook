[uwsgi]
buffer-size = 65536
gevent = 100

socket = {{ pywb_root }}/%n.sock
chmod-socket = 666

#Not available until uwsgi 2.1
#monkey-patching manually in pywb.apps.wayback
#gevent-early-monkey-patch =
# for uwsgi<2.1, set env when using gevent
env = GEVENT_MONKEY_PATCH=1

# specify config file here
#chdir = {{ pywb_root }}
env = PYWB_CONFIG_FILE={{ pywb_root }}/config.yaml
virtualenv = {{ venv_root }}/pywb-ve34
wsgi = pywb.apps.wayback